<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.nishgrid.clienterp.controller.EditAttendanceController"
            prefWidth="400" prefHeight="300">
    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Label text="Edit Attendance" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <HBox spacing="10">
            <Label text="Employee Code:" />
            <TextField fx:id="employeeCodeField" editable="false" />
        </HBox>

        <HBox spacing="10">
            <Label text="Date:" />
            <DatePicker fx:id="attendanceDatePicker" />
        </HBox>

        <HBox spacing="10">
            <Label text="Present Status:" />
            <ComboBox fx:id="presentStatusComboBox">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Present"/>
                        <String fx:value="Absent"/>
                        <String fx:value="Leave"/>
                    </FXCollections>
                </items>
            </ComboBox>
        </HBox>

        <Button text="Save" onAction="#onSave" />
    </VBox>
</AnchorPane>

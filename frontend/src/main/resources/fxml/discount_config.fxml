<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.nishgrid.clienterp.controller.DiscountConfigController">

    <top>
        <Label text="Discounts Management"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <GridPane hgap="10" vgap="10">
                <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="titleField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Value Type:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="valueTypeBox" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="percent"/>
                            <String fx:value="fixed"/>
                        </FXCollections>
                    </items>
                </ComboBox>

                <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextArea fx:id="descriptionArea" GridPane.rowIndex="2" GridPane.columnIndex="1" prefRowCount="3"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="Add Discount" onAction="#handleAddDiscount"/>
                <Button text="Update Selected" onAction="#handleUpdateDiscount"/>
                <Button text="Delete Selected" onAction="#handleDeleteDiscount"/>
            </HBox>

            <TableView fx:id="discountsTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="idCol" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="titleCol" text="Title" prefWidth="150"/>
                    <TableColumn fx:id="typeCol" text="Type" prefWidth="100"/>
                    <TableColumn fx:id="descCol" text="Description" prefWidth="250"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.nishgrid.clienterp.controller.EmployeeDetailsController"
            style="-fx-background-color: #f4f4f9;" prefWidth="700">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
            <children>
                <VBox alignment="CENTER" style="-fx-border-color: #cccccc; -fx-border-radius: 50; -fx-background-radius: 50; -fx-background-color: #e0e0e0;" minWidth="100" minHeight="100">
                    <ImageView fx:id="employeePhoto" fitHeight="100" fitWidth="100" preserveRatio="true"/>
                </VBox>
                <VBox>
                    <TextField fx:id="fullNameField" promptText="Full Name">
                        <font><Font name="System Bold" size="24.0"/></font>
                        <style>-fx-background-color: transparent; -fx-padding: 0;</style>
                    </TextField>
                    <TextField fx:id="emailField" promptText="employee.email@example.com" style="-fx-text-fill: #555555; -fx-background-color: transparent; -fx-padding: 0;"/>
                </VBox>
            </children>
        </HBox>
    </top>

    <center>
        <GridPane fx:id="detailsGrid" hgap="10" vgap="12" style="-fx-padding: 25;">
            <Label text="Gender" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="genderField" promptText="Gender" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Date of Birth" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <DatePicker fx:id="dobPicker" promptText="DOB" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Date of Joining" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <DatePicker fx:id="dojPicker" promptText="DOJ" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Department" GridPane.rowIndex="0" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
            <TextField fx:id="departmentField" promptText="Department" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

            <Label text="Designation" GridPane.rowIndex="1" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
            <TextField fx:id="designationField" promptText="Designation" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

            <Label text="Status" GridPane.rowIndex="2" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
            <TextField fx:id="statusField" promptText="Status" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

            <Label text="Mobile 1" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="mobileNumber1Field" promptText="Primary Mobile" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Mobile 2" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="mobileNumber2Field" promptText="Secondary Mobile" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Aadhaar" GridPane.rowIndex="3" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
            <TextField fx:id="aadhaarNumberField" promptText="Aadhaar Number" GridPane.rowIndex="3" GridPane.columnIndex="3"/>

            <Label text="PAN Card" GridPane.rowIndex="4" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
            <TextField fx:id="panCardNumberField" promptText="PAN Card Number" GridPane.rowIndex="4" GridPane.columnIndex="3"/>

            <Label text="Address" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="addressField" promptText="Full Address" GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.columnSpan="3"/>

            <Label text="Photo URL" GridPane.rowIndex="6" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="photoField" promptText="http://example.com/photo.jpg" GridPane.rowIndex="6" GridPane.columnIndex="1" GridPane.columnSpan="3"/>

            <Label text="Fingerprint File" GridPane.rowIndex="7" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="fingerPrintField" promptText="Path to fingerprint file" GridPane.rowIndex="7" GridPane.columnIndex="1" GridPane.columnSpan="3"/>

            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
            </columnConstraints>
        </GridPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 15; -fx-background-color: #e9e9f0; -fx-border-color: #d0d0d5; -fx-border-width: 1 0 0 0;">
            <children>
                <Button fx:id="editButton" onAction="#onEnableEdit" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;" text="Enable Editing" />
                <Button fx:id="saveButton" onAction="#onSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Save Changes" />
                <Button fx:id="deleteButton" onAction="#onDelete" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-weight: bold;" text="Delete Employee" />
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#closeWindow" text="Close" />
            </children>
        </HBox>
    </bottom>
</BorderPane>

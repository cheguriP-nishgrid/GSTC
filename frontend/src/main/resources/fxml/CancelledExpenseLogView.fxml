<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nishgrid.clienterp.controller.CancelledExpenseLogController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <children>
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Cancelled Expense Log" />

        <TableView fx:id="logTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colCancelledOn" prefWidth="150.0" text="Cancelled On" />
                <TableColumn fx:id="colExpenseId" prefWidth="80.0" text="Expense ID" />
                <TableColumn fx:id="colCategory" prefWidth="120.0" text="Category" />
                <TableColumn fx:id="colOldAmount" prefWidth="100.0" text="Old Amount" />
                <TableColumn fx:id="colReason" prefWidth="250.0" text="Reason" />
                <TableColumn fx:id="colCancelledBy" prefWidth="120.0" text="Cancelled By" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
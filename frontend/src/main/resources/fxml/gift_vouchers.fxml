<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.nishgrid.clienterp.controller.GiftVoucherController">
    <top>
        <Label text="Gift Vouchers / Loyalty Points" style="-fx-font-size: 18px; -fx-font-weight: bold;" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <GridPane hgap="10" vgap="10">
                <Label text="Voucher Code:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="voucherCodeField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Customer:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="customerComboBox" prefWidth="250" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Value:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="valueField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Status:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="statusBox" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="Add" onAction="#handleAdd"/>
                <Button text="Edit Status" onAction="#handleEdit"/>
                <Button text="Delete" onAction="#handleDelete"/>
            </HBox>

            <TableView fx:id="voucherTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="voucherCodeCol" text="Voucher Code" prefWidth="150"/>
                    <TableColumn fx:id="customerNameCol" text="Customer Name" prefWidth="180"/>
                    <TableColumn fx:id="valueCol" text="Value" prefWidth="100"/>
                    <TableColumn fx:id="statusCol" text="Status" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nishgrid.clienterp.controller.ExpenseReportController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <children>
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Expense Reports" />
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-border-color: lightgrey; -fx-border-width: 1; -fx-padding: 10;">
            <children>
                <Label text="Start Date:" />
                <DatePicker fx:id="startDatePicker" />
                <Label text="End Date:" />
                <DatePicker fx:id="endDatePicker" />
                <Button onAction="#handleGenerateReport" text="Generate Report" />
                <Button onAction="#handleClear" text="Clear" />
            </children>
        </HBox>
        <TableView fx:id="reportTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colDate" prefWidth="100.0" text="Date" />
                <TableColumn fx:id="colCategory" prefWidth="150.0" text="Category" />
                <TableColumn fx:id="colPaidTo" prefWidth="200.0" text="Paid To" />
                <TableColumn fx:id="colAmount" prefWidth="120.0" text="Amount" />
                <TableColumn fx:id="colBillNumber" prefWidth="120.0" text="Bill #" />
                <TableColumn fx:id="colStatus" prefWidth="120.0" text="Status" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <children>
                <Label style="-fx-font-weight: bold;" text="Total Expenses:" />
                <Label fx:id="totalAmountLabel" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="0.00" />
            </children>
        </HBox>
    </children>
</VBox>
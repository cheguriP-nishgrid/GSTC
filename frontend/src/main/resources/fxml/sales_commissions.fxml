<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.nishgrid.clienterp.controller.SalesCommissionController">
    <top>
        <Label text="Sales Commission Management"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="12">
            <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

            <GridPane hgap="10" vgap="10">
                <Label text="Employee:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="employeeComboBox" prefWidth="200" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Invoice:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="invoiceComboBox" prefWidth="200" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Commission Rate (% or â‚¹):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="rateField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Amount:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="amountField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="Add" onAction="#handleAdd"/>
                <Button text="Edit" onAction="#handleEdit"/>
                <Button text="Delete" onAction="#handleDelete"/>
            </HBox>

            <TableView fx:id="commissionTable" prefHeight="320">
                <columns>
                    <TableColumn fx:id="commissionIdCol" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="employeeNameCol" text="Employee Name" prefWidth="150"/>
                    <TableColumn fx:id="invoiceNoCol" text="Invoice No" prefWidth="120"/>
                    <TableColumn fx:id="rateCol" text="Commission Rate" prefWidth="120"/>
                    <TableColumn fx:id="amountCol" text="Amount" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
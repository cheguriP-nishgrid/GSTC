<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.nishgrid.clienterp.controller.SalesreportController"
            stylesheets="@css/validation.css">
    <top>
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Sales Summary Reports" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <VBox spacing="15">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="10">

                <VBox spacing="5">
                    <Label text="Generate Report:"/>
                    <ComboBox fx:id="generateTypeBox" prefWidth="160" promptText="Select Type" />
                </VBox>

                <VBox spacing="5">
                    <Label text="Start Date:"/>
                    <DatePicker fx:id="generateDatePicker" prefWidth="120"/>
                </VBox>

                <Label fx:id="endDateLabel" text="to" alignment="BOTTOM_LEFT">
                    <VBox.margin>
                        <Insets top="10" />
                    </VBox.margin>
                </Label>

                <VBox spacing="5">
                    <Label text="End Date:"/>
                    <DatePicker fx:id="generateEndDatePicker" prefWidth="120"/>
                </VBox>

                <Button onAction="#handleGenerateReport" text="Generate" />

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_LEFT" spacing="8">
                    <Label text="Filter Reports:" />
                    <ComboBox fx:id="reportTypeFilter" prefWidth="130" promptText="Select type" />
                    <Button onAction="#handleDownload" prefWidth="100" text="Download Selected" />
                </HBox>

            </HBox>
            <TableView fx:id="reportTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idCol" text="Report ID" />
                    <TableColumn fx:id="dateCol" text="Report Date" />
                    <TableColumn fx:id="typeCol" text="Type" />
                    <TableColumn fx:id="salesCol" text="Total Sales" />
                    <TableColumn fx:id="discountCol" text="Total Discount" />
                    <TableColumn fx:id="itemsCol" prefWidth="90" text="Items Sold" />
                    <TableColumn fx:id="customersCol" prefWidth="90" text="Customers" />
                    <TableColumn fx:id="generatedOnCol" prefWidth="160" text="Generated On" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>
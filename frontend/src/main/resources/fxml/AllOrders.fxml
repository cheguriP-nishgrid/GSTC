<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.nishgrid.clienterp.controller.AllOrdersController"
            prefWidth="1000" prefHeight="600">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Search:"/>
            <TextField fx:id="searchField" promptText="Search by Invoice No / Customer" HBox.hgrow="ALWAYS"/>
            <Label text="Status:"/>
            <ComboBox fx:id="statusFilterBox" promptText="All">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="All"/>
                        <String fx:value="Completed"/>
                        <String fx:value="Pending"/>
                        <String fx:value="Returned"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <Button text="Filter" onAction="#handleFilter"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="ordersTable" prefHeight="500">
            <columns>
                <TableColumn fx:id="invoiceNoCol" text="Invoice No" prefWidth="100"/>
                <TableColumn fx:id="customerNameCol" text="Customer Name" prefWidth="150"/>
                <TableColumn fx:id="invoiceDateCol" text="Date" prefWidth="100"/>
                <TableColumn fx:id="salesTypeCol" text="Sales Type" prefWidth="100"/>
                <TableColumn fx:id="paymentModeCol" text="Payment Mode" prefWidth="120"/>
                <TableColumn fx:id="totalAmountCol" text="Total" prefWidth="100"/>
                <TableColumn fx:id="netAmountCol" text="Net Amount" prefWidth="120"/>
                <TableColumn fx:id="statusCol" text="Status" prefWidth="100"/>
                <TableColumn fx:id="actionsCol" text="Actions" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

</BorderPane>

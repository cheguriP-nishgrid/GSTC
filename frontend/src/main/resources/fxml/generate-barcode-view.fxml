<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.nishgrid.clienterp.controller.GenerateBarcodeController"
      spacing="15" styleClass="root" stylesheets="./css/styles.css"
      prefHeight="600.0" prefWidth="800.0">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Generate New Item Barcode" styleClass="header-label"/>

    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
        <GridPane hgap="15" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="140"/>
                <ColumnConstraints hgrow="ALWAYS"/>
                <ColumnConstraints hgrow="NEVER" minWidth="140"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="Product Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="productNameField" promptText="e.g., 22K Gold Chain" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Item Type:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <ComboBox fx:id="itemTypeComboBox" promptText="Select Type" GridPane.rowIndex="0" GridPane.columnIndex="3" maxWidth="Infinity"/>

            <Label text="Weight (grams):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="weightField" promptText="e.g., 10.500" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Purity:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <TextField fx:id="purityField" promptText="e.g., 916" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

            <Label text="HSN Code:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="hsnCodeField" promptText="e.g., 7113" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Purchase Rate:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
            <TextField fx:id="purchaseRateField" promptText="e.g., 6500.00" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

            <Label text="Making Charge:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="makingChargeField" promptText="e.g., 550.50" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <Label text="Stone Charge:" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
            <TextField fx:id="stoneChargeField" promptText="e.g., 0.00" GridPane.rowIndex="3" GridPane.columnIndex="3"/>

            <Label text="Created For:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <ComboBox fx:id="createdForComboBox" promptText="Select Purpose" GridPane.rowIndex="4" GridPane.columnIndex="1" maxWidth="Infinity"/>
            <Label text="Item ID:" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
            <TextField fx:id="itemIdField" promptText="Internal Item ID" GridPane.rowIndex="4" GridPane.columnIndex="3"/>

            <Label text="Linked Transaction ID:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="linkedTransactionIdField" promptText="Optional transaction ID" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            <Label text="Location ID:" GridPane.rowIndex="5" GridPane.columnIndex="2"/>
            <TextField fx:id="locationIdField" promptText="e.g., 1" GridPane.rowIndex="5" GridPane.columnIndex="3"/>

            <Label text="Generated By (Emp ID):" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <TextField fx:id="generatedByField" promptText="Your Employee ID" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <Label text="Remarks:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
            <TextArea fx:id="remarksArea" prefRowCount="2" promptText="Any additional notes" GridPane.rowIndex="7" GridPane.columnIndex="1" GridPane.columnSpan="3"/>
        </GridPane>
    </ScrollPane>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Button onAction="#handleGenerateBarcode" text="Generate and Save" styleClass="button-success">
            <graphic>
                <Region>
                    <shape>
                        <SVGPath content="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z" fill="white"/>
                    </shape>
                </Region>
            </graphic>
        </Button>
        <Button onAction="#handleClearForm" text="Clear Form" styleClass="button-danger">
            <graphic>
                <Region>
                    <shape>
                        <SVGPath content="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" fill="white"/>
                    </shape>
                </Region>
            </graphic>
        </Button>
        <Region HBox.hgrow="ALWAYS"/>
        <ProgressIndicator fx:id="progressIndicator" visible="false" prefHeight="25.0" prefWidth="25.0"/>
    </HBox>
</VBox>
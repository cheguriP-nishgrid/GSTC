<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.nishgrid.clienterp.controller.HsnSummaryController">
    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="10" top="10" />
            </padding>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="HSN Summary (Monthly)" />

            <!-- CONTROLS FOR GENERATING AND FILTERING -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <padding>
                    <Insets right="15.0" />
                </padding>

                <!-- NEW: Controls for generating a new summary -->
                <Label text="Generate for:" />
                <ComboBox fx:id="yearComboBox" prefWidth="100.0" promptText="Year" />
                <ComboBox fx:id="monthComboBox" prefWidth="100.0" promptText="Month" />
                <Button fx:id="generateButton" onAction="#handleGenerateSummary" text="Generate" style="-fx-base: #28a745;" />

                <Separator orientation="VERTICAL" />

                <!-- Existing controls for filtering -->
                <Label text="Filter by Month:" />
                <ComboBox fx:id="monthFilterComboBox" prefWidth="150.0" promptText="All Months" />
                <Button fx:id="refreshButton" onAction="#handleRefresh" text="Refresh" />
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets bottom="15" left="15" right="15" top="5" />
            </padding>
            <TableView fx:id="hsnTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="hsnCodeCol" prefWidth="120" text="HSN Code" />
                    <TableColumn fx:id="totalQtyCol" prefWidth="150" text="Total Quantity" />
                    <TableColumn fx:id="taxableValueCol" prefWidth="150" text="Taxable Value" />
                    <TableColumn fx:id="gstAmountCol" prefWidth="150" text="GST Amount" />
                    <TableColumn fx:id="monthCol" prefWidth="120" text="Month" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>


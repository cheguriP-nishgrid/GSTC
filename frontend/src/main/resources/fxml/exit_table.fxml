<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.nishgrid.clienterp.controller.ExitTableController"
            prefWidth="800" prefHeight="600">

    <!-- Top: Search + Add Exit -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <TextField fx:id="searchField" promptText="Search by Employee Code" HBox.hgrow="ALWAYS"/>
            <Button text="Search" onAction="#onSearch"/>
            <Button text="Add Exit" onAction="#onAddExit"/>
            <Button text="Edit Selected" onAction="#onEditSelected"/>
        </HBox>
    </top>

    <!-- Center: Responsive Table -->
    <center>
        <VBox spacing="5" VBox.vgrow="ALWAYS">
            <TableView fx:id="exitTableView" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colCode" text="Employee Code" prefWidth="120"/>
                    <TableColumn fx:id="colDate" text="Exit Date" prefWidth="100"/>
                    <TableColumn fx:id="colReason" text="Reason" prefWidth="150"/>
                    <TableColumn fx:id="colSettlement" text="Settlement" prefWidth="100"/>
                    <TableColumn fx:id="colFeedback" text="Feedback" prefWidth="150"/>
                    <TableColumn fx:id="colStatus" text="Clearance" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Bottom: Edit/Delete Buttons (Responsive) -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <Region HBox.hgrow="ALWAYS"/> <!-- Push buttons to the right -->
            <Button text="Edit Selected" onAction="#onEditSelected"/>
            <Button text="Delete Selected" onAction="#onDeleteSelected"/>
        </HBox>
    </bottom>

</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nishgrid.clienterp.controller.PurchaseDocumentController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <children>
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Purchase Documents" />

        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-border-color: lightgrey; -fx-border-width: 1; -fx-padding: 10;">
            <children>
                <Label text="Select Invoice:" />
                <ComboBox fx:id="invoiceComboBox" prefWidth="250.0" promptText="Select an Invoice" />
                <Button fx:id="chooseFileButton" onAction="#handleChooseFile" text="Choose File..." />
                <Label fx:id="selectedFileLabel" text="No file selected" />
                <Button onAction="#handleUpload" style="-fx-base: #28a745;" text="Upload Document" />
            </children>
        </HBox>

        <Separator />
        <Label fx:id="documentListLabel" style="-fx-font-weight: bold;" text="Documents for Selected Invoice" />

        <TableView fx:id="documentTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colFileName" prefWidth="400.0" text="File Name" />
                <TableColumn fx:id="colFileType" prefWidth="150.0" text="File Type" />
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <children>
                <Button onAction="#handleReplace" text="Replace Selected" />
                <Button onAction="#handleDownload" text="Download Selected" />
                <Button onAction="#handleDelete" style="-fx-base: #dc3545;" text="Delete Selected" />
            </children>
        </HBox>
    </children>
</VBox>
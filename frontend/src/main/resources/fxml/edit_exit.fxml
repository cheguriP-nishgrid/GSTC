<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.nishgrid.clienterp.controller.EditExitController"
      spacing="10" alignment="TOP_CENTER"
      prefWidth="400" prefHeight="400">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Edit Employee Exit" style="-fx-font-size: 18px;"/>

    <TextField fx:id="employeeCodeField" promptText="Employee Code"/>
    <DatePicker fx:id="exitDatePicker" promptText="Exit Date"/>
    <TextField fx:id="reasonField" promptText="Reason"/>
    <TextField fx:id="settlementField" promptText="Settlement"/>
    <TextField fx:id="feedbackField" promptText="Feedback"/>
    <ComboBox fx:id="statusComboBox" promptText="Clearance Status">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Pending"/>
                <String fx:value="Cleared"/>
                <String fx:value="Not Cleared"/>
            </FXCollections>
        </items>
    </ComboBox>

    <HBox spacing="10">
        <Button text="Save" onAction="#onSave"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>
</VBox>

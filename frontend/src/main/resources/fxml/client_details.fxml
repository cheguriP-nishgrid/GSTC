<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.nishgrid.clienterp.controller.ClientDetailsController"
            prefWidth="800" prefHeight="600">

    <center>
        <ScrollPane fitToWidth="true" pannable="true" vbarPolicy="AS_NEEDED">
            <content>
                <StackPane alignment="TOP_CENTER" prefWidth="Infinity">
                    <VBox spacing="15" maxWidth="700" alignment="CENTER">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>

                        <Label text="Client Details Form" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                        <GridPane hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints minWidth="170" halignment="RIGHT"/>
                                <ColumnConstraints minWidth="400" hgrow="ALWAYS"/>
                            </columnConstraints>

                            <Label text="License Key:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <TextField fx:id="licenseKeyField" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Start Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <TextField fx:id="startDateField" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="End Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <TextField fx:id="endDateField" editable="false" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                            <Label text="Unique ID:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                            <TextField fx:id="idField" promptText="Unique ID" editable="false" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                            <Label text="Full Name:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                            <TextField fx:id="fullNameField" promptText="Full Name" editable="false" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                            <Label text="Company Name:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                            <TextField fx:id="companyNameField" promptText="Company Name" editable="false" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                            <Label text="Email Address:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                            <TextField fx:id="emailField" promptText="Email Address" editable="false" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                            <Label text="Company Type:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                            <TextField fx:id="companyTypeField" promptText="Company Type" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                            <Label text="Mobile Number:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                            <TextField fx:id="mobileField" promptText="Mobile Number" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

                            <Label text="Logo:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
                            <HBox spacing="10" GridPane.rowIndex="9" GridPane.columnIndex="1">
                                <Button text="Choose File" onAction="#handleChooseLogo"/>
                                <Label fx:id="logoPathLabel" onMouseClicked="#handleLogoPreviewClick"/>
                            </HBox>
                            <ImageView fx:id="logoPreview" fitWidth="100" fitHeight="100" preserveRatio="true"
                                       GridPane.rowIndex="10" GridPane.columnIndex="1"/>

                            <Label text="GST Number:" GridPane.rowIndex="11" GridPane.columnIndex="0"/>
                            <TextField fx:id="gstField" promptText="GST Number" GridPane.rowIndex="11" GridPane.columnIndex="1"/>

                            <Label text="Address:" GridPane.rowIndex="12" GridPane.columnIndex="0"/>
                            <TextArea fx:id="addressArea" promptText="Address" prefRowCount="2" GridPane.rowIndex="12" GridPane.columnIndex="1"/>

                            <Label text="Country:" GridPane.rowIndex="13" GridPane.columnIndex="0"/>
                            <ComboBox fx:id="countryComboBox" promptText="Select Country" GridPane.rowIndex="13" GridPane.columnIndex="1"/>

                            <Label text="State:" GridPane.rowIndex="14" GridPane.columnIndex="0"/>
                            <ComboBox fx:id="stateComboBox" promptText="Select State" GridPane.rowIndex="14" GridPane.columnIndex="1"/>

                            <Label text="Pincode:" GridPane.rowIndex="15" GridPane.columnIndex="0"/>
                            <TextField fx:id="pincodeField" promptText="Pincode" GridPane.rowIndex="15" GridPane.columnIndex="1"/>

                            <Label text="City:" GridPane.rowIndex="16" GridPane.columnIndex="0"/>
                            <TextField fx:id="cityField" promptText="City" editable="false" GridPane.rowIndex="16" GridPane.columnIndex="1"/>

                            <Label text="Admin Password:" GridPane.rowIndex="17" GridPane.columnIndex="0"/>
                            <PasswordField fx:id="adminPasswordField" promptText="Admin Password" GridPane.rowIndex="17" GridPane.columnIndex="1"/>
                        </GridPane>

                        <HBox spacing="15" alignment="CENTER">
                            <Button text="Save" onAction="#handleSave" style="-fx-background-color: green; -fx-text-fill: white;" />
                            <Button text="Reset" onAction="#handleReset" style="-fx-background-color: orange; -fx-text-fill: white;" />
                            <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: red; -fx-text-fill: white;" />
                        </HBox>

                    </VBox>
                </StackPane>
            </content>
        </ScrollPane>
    </center>
</BorderPane>

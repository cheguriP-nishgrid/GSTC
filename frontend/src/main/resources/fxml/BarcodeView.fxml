<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nishgrid.clienterp.controller.BarcodeController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <children>
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Barcode Tagging" />
        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <Label text="Select GRN:" />
                <ComboBox fx:id="grnComboBox" prefWidth="250.0" promptText="Select a Goods Receipt Note" />
            </children>
        </HBox>
        <Label style="-fx-font-weight: bold;" text="Enter or View Barcodes for Received Items" />
        <TableView fx:id="itemBarcodeTable" editable="true" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colItemName" prefWidth="300.0" text="Item Name" />
                <TableColumn fx:id="colItemWeight" prefWidth="120.0" text="Weight" />
                <TableColumn fx:id="colBarcode" prefWidth="250.0" text="Barcode Number (Editable)" />
                <TableColumn fx:id="colScannedBy" prefWidth="130.0" text="Scanned By" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <children>
                <Button onAction="#handleSaveBarcodes" style="-fx-base: #28a745;" text="Save All Barcodes" />
            </children>
        </HBox>
    </children>
</VBox>
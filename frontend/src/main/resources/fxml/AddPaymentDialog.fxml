<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nishgrid.clienterp.controller.AddPaymentDialogController">
    <children>
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Add Payment / Settlement"/>
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" prefWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS" prefWidth="250"/>
            </columnConstraints>

            <Label text="Settlement Type:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="settlementTypeComboBox" maxWidth="Infinity" promptText="Select Type" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Amount:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="amountField" promptText="e.g., 1500.00" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Settlement Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="settlementDatePicker" maxWidth="Infinity" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Reference #:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="referenceField" promptText="Optional (e.g., Cheque No.)" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="saveButton" onAction="#handleSave" text="Save Payment" style="-fx-base: #28a745;"/>
            <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel"/>
        </HBox>
    </children>
</VBox>
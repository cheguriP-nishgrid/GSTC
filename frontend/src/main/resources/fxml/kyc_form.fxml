<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.nishgrid.clienterp.controller.CustomerKycController">
    <top>
        <Label text="Customer KYC Form"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <!-- Form -->
            <GridPane hgap="10" vgap="10">
                <Label text="Customer:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="customerComboBox" prefWidth="250"
                          GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="PAN Number:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="panField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Aadhaar Number:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="aadhaarField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Photo:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <HBox spacing="5" GridPane.rowIndex="3" GridPane.columnIndex="1">
                    <TextField fx:id="photoPathField" editable="false" HBox.hgrow="ALWAYS"/>
                    <Button text="Browse..." onAction="#handleBrowsePhoto"/>
                </HBox>

                <Label text="Verified By:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="verifiedByField" editable="false" promptText="Set by Server"
                           GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Verified On:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="verifiedOnField" editable="false" promptText="Set by Server"
                           GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Label text="Remarks:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextArea fx:id="remarksField" prefRowCount="2"
                          GridPane.rowIndex="6" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Buttons -->
            <HBox spacing="10">
                <Button text="Save" onAction="#handleSave"/>
                <Button text="Delete" onAction="#handleDelete"/>
                <Button text="Clear" onAction="#clearForm"/>
            </HBox>

            <!-- Table -->
            <TableView fx:id="kycTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="idCol" text="KYC ID" prefWidth="70"/>
                    <TableColumn fx:id="customerIdCol" text="Customer ID" prefWidth="100"/>
                    <TableColumn fx:id="customerNameCol" text="Customer Name" prefWidth="150"/>
                    <TableColumn fx:id="panCol" text="PAN Number" prefWidth="120"/>
                    <TableColumn fx:id="aadhaarCol" text="Aadhaar Number" prefWidth="130"/>
                    <TableColumn fx:id="verifiedCol" text="Verified By" prefWidth="100"/>
                    <TableColumn fx:id="verifiedOnCol" text="Verified On" prefWidth="130"/>
                    <TableColumn fx:id="remarksCol" text="Remarks" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>

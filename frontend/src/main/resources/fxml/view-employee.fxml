<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.nishgrid.clienterp.controller.ViewEmployeeController"
            style="-fx-background-color: #f4f4f9;" prefWidth="600">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
            <VBox fx:id="photoContainer" alignment="CENTER"
                  style="-fx-border-color: #cccccc; -fx-border-radius: 50; -fx-background-radius: 50; -fx-background-color: #e0e0e0;"
                  minWidth="100" minHeight="100">
                <ImageView fx:id="employeePhoto" fitHeight="100" fitWidth="100" preserveRatio="true"/>
            </VBox>
            <VBox>
                <Label fx:id="nameLabel" text="Employee Name">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <Label fx:id="emailLabel" text="employee.email@example.com" style="-fx-text-fill: #555555;"/>
            </VBox>
        </HBox>
    </top>

    <center>
        <GridPane hgap="10" vgap="15" style="-fx-padding: 25;">
            <padding>
                <Insets/>
            </padding>
            <Label text="Phone:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="phoneLabel" text="N/A" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Department:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="departmentLabel" text="N/A" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Designation:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="designationLabel" text="N/A" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Gender:" GridPane.rowIndex="0" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
            <Label fx:id="genderLabel" text="N/A" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

            <Label text="Date of Birth:" GridPane.rowIndex="1" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
            <Label fx:id="dobLabel" text="N/A" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

            <Label text="Date of Joining:" GridPane.rowIndex="2" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
            <Label fx:id="dojLabel" text="N/A" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

            <Label text="Aadhaar:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="aadhaarLabel" text="N/A" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="PAN Card:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="panLabel" text="N/A" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Status:" GridPane.rowIndex="3" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
            <Label fx:id="statusLabel" text="N/A" GridPane.rowIndex="3" GridPane.columnIndex="3"/>

            <Label text="Address:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="addressLabel" text="N/A" GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.columnSpan="3" wrapText="true"/>

            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0"/>
            </columnConstraints>
        </GridPane>
    </center>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.ColumnConstraints?>
<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.nishgrid.clienterp.controller.CompanyDashboardController"
            style="-fx-background-color: #f4f7fa;">
    <children>

        <StackPane AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0"
                   AnchorPane.topAnchor="0.0"
                   alignment="CENTER">

            <VBox alignment="TOP_CENTER" spacing="25.0"
                  maxWidth="1100"
                  StackPane.alignment="TOP_CENTER">
                <padding>
                    <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
                </padding>

                <children>
                    <!-- Title -->
                    <Label text="Company Dashboard" textFill="#2a3a5d">
                        <font>
                            <Font name="System Bold" size="30.0"/>
                        </font>
                    </Label>

                    <!-- Content Area -->
                    <HBox fx:id="contentBox" alignment="TOP_CENTER" spacing="30.0">
                        <children>

                            <!-- License Status Card -->
                            <VBox prefWidth="340.0" spacing="15.0"
                                  style="-fx-background-color: white;
                                         -fx-padding: 25;
                                         -fx-background-radius: 12;
                                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0.5, 0, 2);">
                                <children>
                                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                                        <children>
                                            <SVGPath content="M15.5,2H8.5C7.7,2,7,2.7,7,3.5v17C7,21.3,7.7,22,8.5,22h7c0.8,0,1.5-0.7,1.5-1.5v-17C17,2.7,16.3,2,15.5,2z M15.5,18H8.5v-13h7V18z M12,21.2c-0.7,0-1.2-0.5-1.2-1.2s0.5-1.2,1.2-1.2s1.2,0.5,1.2,1.2S12.7,21.2,12,21.2z"
                                                     fill="#2a3a5d"/>
                                            <Label text="License Status" textFill="#2a3a5d">
                                                <font>
                                                    <Font name="System Bold" size="20.0"/>
                                                </font>
                                            </Label>
                                        </children>
                                    </HBox>

                                    <Label fx:id="statusLabel" text="-" textFill="#444444">
                                        <font>
                                            <Font name="System Bold" size="26.0"/>
                                        </font>
                                    </Label>

                                    <VBox spacing="5.0">
                                        <Label text="Days Remaining" textFill="#555555">
                                            <font>
                                                <Font size="15.0"/>
                                            </font>
                                        </Label>
                                        <Label fx:id="daysRemainingLabel" text="-" textFill="#1a1a1a">
                                            <font>
                                                <Font name="System Bold" size="30.0"/>
                                            </font>
                                        </Label>
                                    </VBox>

                                    <GridPane hgap="10.0" vgap="10.0">
                                        <children>
                                            <Label text="Expires On:" style="-fx-text-fill: #555; -fx-font-weight: bold;"
                                                   GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                            <Label fx:id="endDateLabel" text="-" style="-fx-text-fill: #222;"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                                            <Label text="Started On:" style="-fx-text-fill: #555; -fx-font-weight: bold;"
                                                   GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                            <Label fx:id="startDateLabel" text="-" style="-fx-text-fill: #222;"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                        </children>
                                    </GridPane>
                                </children>
                            </VBox>

                            <!-- Company Information Card -->
                            <VBox prefWidth="520.0" spacing="15.0"
                                  style="-fx-background-color: white;
                                         -fx-padding: 25;
                                         -fx-background-radius: 12;
                                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0.5, 0, 2);">
                                <children>
                                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                                        <children>
                                            <SVGPath content="M12,7V3H2v18h20V7H12z M6,19H4v-2h2V19z M6,15H4v-2h2V15z M6,11H4V9h2V11z M6,7H4V5h2V7z M10,19H8v-2h2V19z M10,15H8v-2h2V15z M10,11H8V9h2V11z M10,7H8V5h2V7z M20,19h-8v-2h2v-2h-2v-2h2v-2h-2V9h8V19z M18,11h-2v2h2V11z M18,15h-2v2h2V15z"
                                                     fill="#2a3a5d"/>
                                            <Label text="Company Information" textFill="#2a3a5d">
                                                <font>
                                                    <Font name="System Bold" size="20.0"/>
                                                </font>
                                            </Label>
                                        </children>
                                    </HBox>

                                    <GridPane hgap="15.0" vgap="12.0" style="-fx-font-size: 15px;">
                                        <columnConstraints>
                                            <ColumnConstraints minWidth="100" halignment="LEFT"/>
                                            <ColumnConstraints prefWidth="350" halignment="LEFT"/>
                                        </columnConstraints>

                                        <children>
                                            <Label text="Company:" style="-fx-font-weight: bold; -fx-text-fill: #333;"
                                                   GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                            <Label fx:id="companyNameLabel" text="-" wrapText="true"
                                                   maxWidth="350" style="-fx-text-fill: #000;"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                                            <Label text="Contact:" style="-fx-font-weight: bold; -fx-text-fill: #333;"
                                                   GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                            <Label fx:id="fullNameLabel" text="-" wrapText="true"
                                                   maxWidth="350" style="-fx-text-fill: #000;"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                                            <Label text="Email:" style="-fx-font-weight: bold; -fx-text-fill: #333;"
                                                   GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                            <Label fx:id="emailLabel" text="-" wrapText="true"
                                                   maxWidth="350" style="-fx-text-fill: #000;"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                                            <Label text="GST No:" style="-fx-font-weight: bold; -fx-text-fill: #333;"
                                                   GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                                            <Label fx:id="gstLabel" text="-" wrapText="true"
                                                   maxWidth="350" style="-fx-text-fill: #000;"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                                            <Label text="Address:" style="-fx-font-weight: bold; -fx-text-fill: #333;"
                                                   GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                                            <Label fx:id="addressLabel" text="-" wrapText="true"
                                                   maxWidth="350" style="-fx-text-fill: #000;"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                                        </children>
                                    </GridPane>
                                </children>
                            </VBox>
                        </children>
                    </HBox>
                </children>
            </VBox>

            <!-- Loading Indicator -->
            <ProgressIndicator fx:id="loadingIndicator"
                               visible="false"
                               maxWidth="70"
                               maxHeight="70"
                               StackPane.alignment="CENTER"/>
        </StackPane>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.nishgrid.clienterp.controller.ViewEditController"
            prefWidth="800" prefHeight="600">

    <VBox spacing="10" prefWidth="800" styleClass="main-container">

        <!-- Tab Buttons -->
        <HBox spacing="10" alignment="CENTER" styleClass="tab-bar">
            <Button fx:id="btnEmployee" text="Employee" onAction="#showEmployeeTab" />
            <Button fx:id="btnAttendance" text="Attendance" onAction="#showAttendanceTab" />
            <Button fx:id="btnSalary" text="Salary" onAction="#showSalaryTab" />
            <Button fx:id="btnLeaves" text="Leaves" onAction="#showLeavesTab" />
            <Button fx:id="btnExit" text="Exit" onAction="#showExitTab" />
        </HBox>

        <!-- SINGLE Content Area -->
        <StackPane fx:id="contentPane" VBox.vgrow="ALWAYS" styleClass="tab-pane">
            <!-- Loaded FXML will appear here -->
        </StackPane>
    </VBox>
</AnchorPane>

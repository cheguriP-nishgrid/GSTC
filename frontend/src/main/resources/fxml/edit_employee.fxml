<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="org.nishgrid.clienterp.controller.EditEmployeeController"
          xmlns:fx="http://javafx.com/fxml"
          hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <TextField fx:id="employeeCodeField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Label text="Employee Code" GridPane.rowIndex="0" GridPane.columnIndex="0"/>

    <TextField fx:id="fullNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Label text="Full Name" GridPane.rowIndex="1" GridPane.columnIndex="0"/>

    <TextField fx:id="genderField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Label text="Gender" GridPane.rowIndex="2" GridPane.columnIndex="0"/>

    <DatePicker fx:id="dobPicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Label text="Date of Birth" GridPane.rowIndex="3" GridPane.columnIndex="0"/>

    <DatePicker fx:id="dojPicker" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <Label text="Date of Joining" GridPane.rowIndex="4" GridPane.columnIndex="0"/>

    <TextField fx:id="departmentField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    <Label text="Department" GridPane.rowIndex="5" GridPane.columnIndex="0"/>

    <TextField fx:id="designationField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    <Label text="Designation" GridPane.rowIndex="6" GridPane.columnIndex="0"/>

    <TextField fx:id="mobileNumber1Field" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
    <Label text="Mobile 1" GridPane.rowIndex="7" GridPane.columnIndex="0"/>

    <TextField fx:id="mobileNumber2Field" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
    <Label text="Mobile 2" GridPane.rowIndex="8" GridPane.columnIndex="0"/>

    <TextField fx:id="emailField" GridPane.rowIndex="9" GridPane.columnIndex="1"/>
    <Label text="Email" GridPane.rowIndex="9" GridPane.columnIndex="0"/>

    <TextField fx:id="aadhaarNumberField" GridPane.rowIndex="10" GridPane.columnIndex="1"/>
    <Label text="Aadhaar Number" GridPane.rowIndex="10" GridPane.columnIndex="0"/>

    <TextField fx:id="panCardNumberField" GridPane.rowIndex="11" GridPane.columnIndex="1"/>
    <Label text="PAN Card Number" GridPane.rowIndex="11" GridPane.columnIndex="0"/>

    <TextField fx:id="addressField" GridPane.rowIndex="12" GridPane.columnIndex="1"/>
    <Label text="Address" GridPane.rowIndex="12" GridPane.columnIndex="0"/>

    <TextField fx:id="statusField" GridPane.rowIndex="13" GridPane.columnIndex="1"/>
    <Label text="Status" GridPane.rowIndex="13" GridPane.columnIndex="0"/>

    <TextField fx:id="photoField" GridPane.rowIndex="14" GridPane.columnIndex="1"/>
    <Label text="Photo File" GridPane.rowIndex="14" GridPane.columnIndex="0"/>

    <TextField fx:id="fingerPrintField" GridPane.rowIndex="15" GridPane.columnIndex="1"/>
    <Label text="Fingerprint File" GridPane.rowIndex="15" GridPane.columnIndex="0"/>

    <Button text="Save" onAction="#onSave" GridPane.rowIndex="16" GridPane.columnIndex="1"/>
</GridPane>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.nishgrid.clienterp.controller.SalesreportController">
    <top>
        <Label text="Sales Summary Reports"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="12">
            <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

            <GridPane hgap="20" vgap="10">
                <HBox spacing="10" alignment="CENTER_LEFT" GridPane.rowIndex="0" GridPane.columnIndex="0">
                    <Label text="Generate New Report:"/>
                    <ComboBox fx:id="generateTypeBox" promptText="Select Type"/>
                    <DatePicker fx:id="generateDatePicker"/>
                    <Button text="Generate" onAction="#handleGenerateReport"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="0" GridPane.columnIndex="1">
                    <Label text="Filter Displayed Reports:"/>
                    <ComboBox fx:id="reportTypeFilter" promptText="Select type"/>
                    <Button text="Download Selected" onAction="#handleDownload"/>
                </HBox>
            </GridPane>

            <TableView fx:id="reportTable" prefHeight="400">
                <columns>
                    <TableColumn fx:id="idCol" text="Report ID"/>
                    <TableColumn fx:id="dateCol" text="Report Date"/>
                    <TableColumn fx:id="typeCol" text="Type"/>
                    <TableColumn fx:id="salesCol" text="Total Sales"/>
                    <TableColumn fx:id="taxCol" text="Total Tax"/>
                    <TableColumn fx:id="discountCol" text="Total Discount"/>
                    <TableColumn fx:id="itemsCol" text="Items Sold"/>
                    <TableColumn fx:id="customersCol" text="Customers"/>
                    <TableColumn fx:id="generatedOnCol" text="Generated On"/>
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>
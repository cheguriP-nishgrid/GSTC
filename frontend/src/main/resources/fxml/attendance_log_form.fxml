<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- This FXML links to the AttendanceLogFormController -->
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.nishgrid.clienterp.controller.AttendanceLogFormController">
    <center>
        <VBox spacing="20" alignment="CENTER" maxWidth="450">
            <Label text="Log Employee Attendance" styleClass="header-label"/>
            <GridPane hgap="10" vgap="15">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Employee Code:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="employeeCodeField" promptText="e.g., EMP1001" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <DatePicker fx:id="datePicker" promptText="Select Date" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Check-in Time:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="checkInTimeField" promptText="HH:mm:ss" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Check-out Time:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="checkOutTimeField" promptText="HH:mm:ss" GridPane.rowIndex="3" GridPane.columnIndex="1"/>


                <Label text="Status:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <ComboBox fx:id="statusComboBox" promptText="Select Status" GridPane.rowIndex="4" GridPane.columnIndex="1" maxWidth="Infinity">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Present"/>
                            <String fx:value="Absent"/>
                            <String fx:value="Half-day"/>
                            <String fx:value="Leave"/>
                        </FXCollections>
                    </items>
                </ComboBox>
            </GridPane>
            <Button text="Submit Attendance" onAction="#handleSubmit"/>
            <Label fx:id="messageLabel" />
        </VBox>
    </center>
</BorderPane>
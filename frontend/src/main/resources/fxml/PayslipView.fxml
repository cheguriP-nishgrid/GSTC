<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nishgrid.clienterp.controller.PayslipControllerFx">
    <children>
        <HBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <VBox spacing="15.0" HBox.hgrow="NEVER" prefWidth="350">
                <children>
                    <Label text="Generate Payslip">
                        <font><Font name="System Bold" size="18.0" /></font>
                    </Label>
                    <GridPane hgap="10.0" vgap="10.0">
                        <Label text="Employee" />
                        <ComboBox fx:id="employeeComboBox"
                                  prefWidth="250.0"
                                  promptText="Search by name or code..."
                                  editable="true"
                                  GridPane.columnIndex="1" />

                        <Label text="Month" GridPane.rowIndex="1" />
                        <ComboBox fx:id="monthComboBox" prefWidth="250.0" promptText="Select Month" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Total Working Days" GridPane.rowIndex="2" />
                        <TextField fx:id="totalWorkingDaysField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Days Present" GridPane.rowIndex="3" />
                        <TextField fx:id="daysPresentField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label text="Total Salary (Gross)" GridPane.rowIndex="4" />
                        <TextField fx:id="totalSalaryField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label text="Total Deductions" GridPane.rowIndex="5" />
                        <TextField fx:id="totalDeductionsField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                        <Label text="Net Salary" GridPane.rowIndex="6" />
                        <TextField fx:id="netSalaryField" editable="false" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        </rowConstraints>
                    </GridPane>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Button fx:id="saveButton" onAction="#handleSave" prefWidth="80.0" text="Save" />
                        <Button fx:id="clearButton" onAction="#handleClear" prefWidth="80.0" text="Clear" />
                    </HBox>
                    <Label fx:id="statusLabel" textFill="RED" wrapText="true" />
                </children>
            </VBox>

            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <children>
                    <Label text="Existing Payslips">
                        <font><Font name="System Bold" size="18.0" /></font>
                    </Label>
                    <TableView fx:id="payslipTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="employeeCodeColumn" prefWidth="120.0" text="Employee Code" />
                            <TableColumn fx:id="monthColumn" prefWidth="100.0" text="Month" />
                            <TableColumn fx:id="netSalaryColumn" prefWidth="120.0" text="Net Salary" />
                            <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                        </columns>
                        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                    </TableView>
                    <HBox alignment="CENTER_RIGHT">
                        <Button fx:id="downloadButton" onAction="#handleDownload" prefWidth="140.0" text="Download Selected" />
                    </HBox>
                </children>
            </VBox>
        </HBox>
    </children>
</AnchorPane>
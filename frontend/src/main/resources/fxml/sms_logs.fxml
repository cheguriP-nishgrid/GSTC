<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.nishgrid.clienterp.controller.SmsWhatsappLogController">
    <top>
        <Label text="SMS / WhatsApp Logs"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <TableView fx:id="smsLogsTable" prefHeight="400">
                <columns>
                    <TableColumn fx:id="messageIdCol" text="Message ID" prefWidth="80"/>
                    <TableColumn fx:id="customerIdCol" text="Customer ID" prefWidth="100"/>
                    <TableColumn fx:id="messageTypeCol" text="Message Type" prefWidth="150"/>
                    <TableColumn fx:id="statusCol" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="timestampCol" text="Timestamp" prefWidth="200"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <Button fx:id="refreshButton" text="Refresh"/>
        </HBox>
    </bottom>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="600.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nishgrid.clienterp.controller.InvoicesController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label text="Search:" />
            <TextField fx:id="searchField" onAction="#handleSearch" promptText="Invoice No, Customer Name..." HBox.hgrow="ALWAYS" />
            <Label text="Status:" />
            <ComboBox fx:id="statusFilterBox" prefWidth="150.0" />
            <Button onAction="#handleSearch" text="Search" />
        </HBox>
    </top>
    <center>
        <TableView fx:id="invoiceTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="invoiceNoCol" prefWidth="150.0" text="Invoice No" />
                <TableColumn fx:id="customerCol" prefWidth="100.0" text="Customer" />
                <TableColumn fx:id="dateCol" prefWidth="100.0" text="Date" />
                <TableColumn fx:id="paymentModeCol" prefWidth="100.0" text="Payment Mode" />
                <TableColumn fx:id="amountCol" prefWidth="100.0" text="Total Amount" />
                <TableColumn fx:id="netAmountCol" prefWidth="100.0" text="Net Amount" />
                <TableColumn fx:id="paidAmountCol" prefWidth="100.0" text="Paid Amount" />
                <TableColumn fx:id="dueAmountCol" prefWidth="100.0" text="Due Amount" />
                <TableColumn fx:id="statusCol" prefWidth="100.0" text="Status" />
                <TableColumn fx:id="actionCol" prefWidth="150.0" style="-fx-alignment: CENTER;" text="Actions" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
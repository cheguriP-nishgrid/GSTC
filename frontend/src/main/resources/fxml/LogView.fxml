<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nishgrid.clienterp.controller.LogController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <children>
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="System Logs" />
        <TabPane VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Audit Logs">
                    <content>
                        <TableView fx:id="auditLogTable">
                            <columns>
                                <TableColumn fx:id="colAuditTimestamp" prefWidth="150.0" text="Timestamp" />
                                <TableColumn fx:id="colAuditUser" prefWidth="100.0" text="User ID" />
                                <TableColumn fx:id="colAuditAction" prefWidth="100.0" text="Action" />
                                <TableColumn fx:id="colAuditModule" prefWidth="150.0" text="Module" />
                                <TableColumn fx:id="colAuditDetails" prefWidth="350.0" text="Details" />
                            </columns>
                            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                        </TableView>
                    </content>
                </Tab>
                <Tab text="Status Change Logs">
                    <content>
                        <TableView fx:id="statusLogTable">
                            <columns>
                                <TableColumn fx:id="colStatusTimestamp" prefWidth="150.0" text="Changed At" />
                                <TableColumn fx:id="colStatusPoNumber" prefWidth="150.0" text="PO Number" />
                                <TableColumn fx:id="colStatusOld" prefWidth="120.0" text="Old Status" />
                                <TableColumn fx:id="colStatusNew" prefWidth="120.0" text="New Status" />
                                <TableColumn fx:id="colStatusUser" prefWidth="120.0" text="Changed By" />
                            </columns>
                            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                        </TableView>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</VBox>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.nishgrid.clienterp.controller.EditLeaveController"
      style="-fx-padding: 20">

    <Label text="Edit Leave Request" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Leave ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtLeaveId" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Employee Code:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtEmpCode" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Status:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="statusCombo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnSave" text="Save"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.nishgrid.clienterp.controller.AttendanceTabController"
            prefWidth="900" prefHeight="600">
    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <HBox spacing="10">
            <Label text="Employee Code:" />
            <TextField fx:id="searchEmployeeCode" promptText="e.g. J001" />
            <Label text="Date:" />
            <DatePicker fx:id="searchDate" />
            <Button text="Search" onAction="#onSearch" />
            <Button text="Reset" onAction="#onReset" />
        </HBox>

        <TableView fx:id="attendanceTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colLogId" text="Log ID" />
                <TableColumn fx:id="colEmpCode" text="Employee Code" />
                <TableColumn fx:id="colDate" text="Date" />
                <TableColumn fx:id="colIn" text="Check‑In" />
                <TableColumn fx:id="colOut" text="Check‑Out" />
                <TableColumn fx:id="colHours" text="Hours" />
                <TableColumn fx:id="colStatus" text="Present?" />
                <TableColumn fx:id="colEdit" text="Edit" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nishgrid.clienterp.controller.BankDetailsController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <children>
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Company Bank Details" />

        <GridPane hgap="10" vgap="10" style="-fx-border-color: lightgrey; -fx-border-width: 1; -fx-padding: 10;">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" prefWidth="120" />
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints halignment="RIGHT" prefWidth="120" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <children>
                <Label text="Account Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="accountNameField" promptText="e.g., HARIPRIYA JEWELLERS" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Bank Name:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <TextField fx:id="bankNameField" promptText="e.g., HDFC" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                <Label text="Account Number:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="accountNumberField" promptText="Bank Account Number" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="IFSC Code:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <TextField fx:id="ifscCodeField" promptText="Bank IFSC Code" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                <Label text="Branch Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="branchNameField" promptText="e.g., SARAIYAGANJ" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Status:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <ComboBox fx:id="statusComboBox" prefWidth="200.0" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                <Label text="Upload QR Code:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3">
                    <children>
                        <Button fx:id="chooseFileButton" onAction="#handleChooseFile" text="Choose Image..." />
                        <Label fx:id="selectedFileLabel" text="No file selected" />
                    </children>
                </HBox>

                <Label text="QR Code Preview:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <ImageView fx:id="qrCodeImageView" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </children>
        </GridPane>

        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <Button onAction="#handleSave" style="-fx-base: #28a745;" text="Save Details" />
                <Button onAction="#handleClearForm" text="New" />
            </children>
        </HBox>

        <Separator />
        <Label style="-fx-font-weight: bold;" text="Saved Bank Accounts" />

        <TableView fx:id="bankDetailsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colBankName" prefWidth="200.0" text="Bank Name" />
                <TableColumn fx:id="colAccountName" prefWidth="200.0" text="Account Name" />
                <TableColumn fx:id="colAccountNumber" prefWidth="200.0" text="Account Number" />
                <TableColumn fx:id="colStatus" prefWidth="120.0" text="Status" />
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT">
            <Button onAction="#handleDelete" style="-fx-base: #dc3545;" text="Delete Selected" />
        </HBox>
    </children>
</VBox>
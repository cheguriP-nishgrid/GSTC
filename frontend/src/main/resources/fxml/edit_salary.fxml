<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.nishgrid.clienterp.controller.EditSalaryController">
    <VBox spacing="15" alignment="TOP_CENTER"
          AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Edit Salary Structure" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Basic Salary:" minWidth="120"/>
            <TextField fx:id="txtBasic" promptText="Basic Salary"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="HRA:" minWidth="120"/>
            <TextField fx:id="txtHRA" promptText="HRA"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Other Allowances:" minWidth="120"/>
            <TextField fx:id="txtAllowances" promptText="Other Allowances"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="PF Deduction:" minWidth="120"/>
            <TextField fx:id="txtPF" promptText="PF Deduction"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="ESI Deduction:" minWidth="120"/>
            <TextField fx:id="txtESI" promptText="ESI Deduction"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="TDS Deduction:" minWidth="120"/>
            <TextField fx:id="txtTDS" promptText="TDS Deduction"/>
        </HBox>

        <Button text="Update Save" onAction="#onSave"/>
    </VBox>
</AnchorPane>

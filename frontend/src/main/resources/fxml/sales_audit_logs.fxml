<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.nishgrid.clienterp.controller.SalesAuditLogController">
    <top>
        <Label text="Sales Audit Logs"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="10">
            <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
            <TableView fx:id="auditTable" prefHeight="400">
                <columns>
                    <TableColumn fx:id="logIdCol" text="Log ID" prefWidth="70"/>
                    <TableColumn fx:id="invoiceIdCol" text="Invoice ID" prefWidth="80"/>
                    <TableColumn fx:id="actionCol" text="Action" prefWidth="100"/>
                    <TableColumn fx:id="performedByCol" text="Performed By" prefWidth="120"/>
                    <TableColumn fx:id="timestampCol" text="Timestamp" prefWidth="160"/>
                    <TableColumn fx:id="oldDataCol" text="Old Data" prefWidth="250"/>
                    <TableColumn fx:id="newDataCol" text="New Data" prefWidth="250"/>
                </columns>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding><Insets top="10"/></padding>
            <Button fx:id="refreshButton" text="Refresh"/>
        </HBox>
    </bottom>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TabPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="org.nishgrid.clienterp.controller.EmployeeExitViewController"
         tabClosingPolicy="UNAVAILABLE">
    <tabs>
        <Tab text="Record Employee Exit">
            <content>
                <fx:include source="employee_exit_form.fxml" fx:id="employeeExitForm"/>
            </content>
        </Tab>
        <Tab text="View Exited Employees">
            <content>
                <BorderPane>
                    <top>
                        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
                            <children>
                                <Label fx:id="listStatusLabel" text="" HBox.hgrow="ALWAYS"/>
                                <Button fx:id="refreshButton" text="Refresh List" onAction="#handleRefresh"/>
                            </children>
                        </HBox>
                    </top>
                    <center>
                        <TableView fx:id="exitedEmployeesTable">
                            <columns>
                                <TableColumn fx:id="employeeCodeColumn" text="Employee Code"/>
                                <TableColumn fx:id="employeeNameColumn" text="Full Name"/>
                                <TableColumn fx:id="exitDateColumn" text="Exit Date"/>
                                <TableColumn fx:id="exitReasonColumn" prefWidth="200" text="Reason"/>
                                <TableColumn fx:id="settlementColumn" text="Final Settlement"/>
                                <TableColumn fx:id="statusColumn" text="Clearance Status"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </center>
                </BorderPane>
            </content>
        </Tab>
    </tabs>
</TabPane>
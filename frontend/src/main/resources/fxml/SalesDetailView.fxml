<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.nishgrid.clienterp.controller.SalesDetailController"
      spacing="15" style="-fx-padding: 20;"
      stylesheets="@css/validation.css">
    <Label text="Sales Estimated Details" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
    <Separator/>
    <GridPane hgap="10" vgap="8">
        <Label text="Estimated No:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="invoiceNoLabel" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="Estimated Date:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <Label fx:id="invoiceDateLabel" text="-" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Label text="Customer:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="customerNameLabel" text="-" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Mobile:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <Label fx:id="customerMobileLabel" text="-" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
    </GridPane>
    <Label text="Items" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <TableView fx:id="itemsTable" prefHeight="200">
        <columns>
            <TableColumn fx:id="itemNameCol" text="Item Name" prefWidth="200"/>
            <TableColumn fx:id="netWeightCol" text="Net Weight" prefWidth="100"/>
            <TableColumn fx:id="totalPriceCol" text="Total Price" prefWidth="120"/>
        </columns>
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
    </TableView>
    <Separator/>
    <GridPane hgap="10" vgap="8" alignment="CENTER_RIGHT">
        <Label text="Total Amount:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="totalAmountLabel" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Old Gold Value:" style="-fx-font-weight: bold; -fx-text-fill: #993300;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="oldGoldLabel" text="-" style="-fx-text-fill: #993300;" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Returned Amount:" style="-fx-font-weight: bold; -fx-text-fill: red;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="returnedAmountLabel" text="-" style="-fx-text-fill: red;" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Paid Amount:" style="-fx-font-weight: bold;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="paidAmountLabel" text="-" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Due Amount:" style="-fx-font-weight: bold; -fx-text-fill: #cc00cc;" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Label fx:id="dueAmountLabel" text="-" style="-fx-text-fill: #cc00cc;" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Final Payable:" style="-fx-font-weight: bold; -fx-text-fill: green; -fx-font-size: 18px;" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <Label fx:id="finalAmountLabel" text="-" style="-fx-font-size: 18px; -fx-text-fill: green; -fx-font-weight: bold;" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>
    <HBox alignment="CENTER_RIGHT">
        <Button text="Close" onAction="#handleClose"/>
    </HBox>
</VBox>
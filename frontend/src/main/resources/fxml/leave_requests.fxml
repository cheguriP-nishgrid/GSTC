<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.nishgrid.clienterp.controller.LeaveRequestController">

    <VBox spacing="15" alignment="TOP_CENTER"
          AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Search and Refresh Buttons -->
        <HBox spacing="10">
            <TextField fx:id="txtSearch" promptText="Enter Employee Code" />
            <Button fx:id="btnSearch" text="Search" />
            <Button fx:id="btnRefresh" text="Refresh" />
        </HBox>

        <!-- Leave Request Table -->
        <TableView fx:id="leaveTable" prefHeight="500" prefWidth="950">
            <columns>
                <TableColumn fx:id="colLeaveId" text="Leave ID" />
                <TableColumn fx:id="colEmployeeCode" text="Emp Code" />
                <TableColumn fx:id="colFullName" text="Name" />
                <TableColumn fx:id="colLeaveType" text="Type" />
                <TableColumn fx:id="colFromDate" text="From" />
                <TableColumn fx:id="colToDate" text="To" />
                <TableColumn fx:id="colTotalDays" text="Days" />
                <TableColumn fx:id="colStatus" text="Status" />
                <TableColumn fx:id="colApprovedBy" text="Approved By" />
                <TableColumn fx:id="colLeavePaymentType" text="Payment" />
                <TableColumn fx:id="colAction" text="Actions" />
            </columns>
        </TableView>

    </VBox>

</AnchorPane>

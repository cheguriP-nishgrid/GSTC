<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nishgrid.clienterp.controller.VendorProductController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <children>
        <TabPane VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Vendor Management">
                    <content>
                        <VBox spacing="10">
                            <padding>
                                <Insets bottom="10" left="10" right="10" top="10" />
                            </padding>
                            <children>
                                <GridPane hgap="10" vgap="10">
                                    <columnConstraints>
                                        <ColumnConstraints halignment="RIGHT" prefWidth="100" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                        <ColumnConstraints halignment="RIGHT" prefWidth="110" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                    </columnConstraints>
                                    <children>
                                        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                        <TextField fx:id="vendorNameField" promptText="Vendor/Company Name" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                        <Label text="Contact Person:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                                        <TextField fx:id="vendorContactPersonField" promptText="Person to contact" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                                        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                        <TextField fx:id="vendorEmailField" promptText="Email ID" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <Label text="Phone:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                        <TextField fx:id="vendorPhoneField" promptText="Contact number" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                                        <Label text="GST Number:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                        <TextField fx:id="vendorGstNumberField" promptText="Vendor GSTIN" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                        <Label text="State:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                                        <TextField fx:id="vendorStateField" promptText="e.g., Maharashtra" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                                        <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                        <TextField fx:id="vendorAddressField" promptText="Full address" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3" />
                                    </children>
                                </GridPane>
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <children>
                                        <Button onAction="#saveVendor" style="-fx-base: #28a745;" text="Save" />
                                        <Button onAction="#clearVendorForm" text="New" />
                                    </children>
                                </HBox>
                                <TableView fx:id="vendorTable" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="vendorIdCol" prefWidth="40" text="ID" />
                                        <TableColumn fx:id="vendorNameCol" prefWidth="150" text="Name" />
                                        <TableColumn fx:id="vendorContactPersonCol" prefWidth="120" text="Contact Person" />
                                        <TableColumn fx:id="vendorEmailCol" prefWidth="150" text="Email" />
                                        <TableColumn fx:id="vendorPhoneCol" prefWidth="100" text="Phone" />
                                        <TableColumn fx:id="vendorStateCol" prefWidth="120" text="State" />
                                        <TableColumn fx:id="vendorGstNumberCol" prefWidth="120" text="GST Number" />
                                        <TableColumn fx:id="vendorAddressCol" prefWidth="200" text="Address" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                                <HBox alignment="CENTER_RIGHT">
                                    <children>
                                        <Button onAction="#deleteSelectedVendor" style="-fx-base: #dc3545;" text="Delete Selected" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </Tab>

                <Tab text="Product Catalog">
                    <content>
                        <VBox spacing="10">
                            <padding>
                                <Insets bottom="10" left="10" right="10" top="10" />
                            </padding>
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <children>
                                        <TextField fx:id="productNameField" promptText="Product Name" HBox.hgrow="ALWAYS" />
                                        <TextField fx:id="productPurityField" promptText="Purity (e.g., 22K)" HBox.hgrow="ALWAYS" />
                                        <TextField fx:id="productRateField" promptText="Default Rate" HBox.hgrow="ALWAYS" />
                                        <Button onAction="#saveProduct" style="-fx-base: #28a745;" text="Save" />
                                        <Button onAction="#clearProductForm" text="New" />
                                    </children>
                                </HBox>
                                <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="productIdCol" prefWidth="50" text="ID" />
                                        <TableColumn fx:id="productNameCol" prefWidth="200" text="Name" />
                                        <TableColumn fx:id="productPurityCol" prefWidth="150" text="Purity" />
                                        <TableColumn fx:id="productRateCol" prefWidth="150" text="Default Rate" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                                <HBox alignment="CENTER_RIGHT">
                                    <children>
                                        <Button onAction="#deleteSelectedProduct" style="-fx-base: #dc3545;" text="Delete Selected" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</VBox>
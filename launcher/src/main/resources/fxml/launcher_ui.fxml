<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml" fx:controller="org.nishgrid.clienterp.Launcher">
    <Label text="NishGrid ERP Launcher" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <Button text="Launch App" fx:id="launchButton" prefWidth="200" />
    <Button text="Check for Updates" fx:id="updateButton" prefWidth="200" />
    <TextArea fx:id="releaseNotesArea" prefWidth="300" prefHeight="150" editable="false" wrapText="true" />
    <Label fx:id="statusLabel" text="" />
</VBox>
